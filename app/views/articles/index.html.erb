<!-- .container is main centered wrapper -->
<div class="container">
    <h1>Index of Articles</h1>

    <%= link_to 'New Article', new_article_path, :class => "button button-primary" %>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Text</th>
                <th>Tags</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% if @articles.any? %>
                <% @articles.each do |article| %>
                    <tr>
                        <td><%= article.title %></td>
                        <td><%= article.text %></td>
                        <td><%= raw article.all_tags.split(",").map { |t| link_to t.strip, tag_path(t.strip) }.join(', ') %></td>
                        <td><%= link_to 'Show', article_path(article), :class => "button button-primary" %></td>
                        <td><%= link_to 'Edit', edit_article_path(article), :class => "button button-primary" %></td>
                        <td><%= link_to 'Destroy', article_path(article), :class => "button button-primary", method: :delete, data: { confirm: 'Are you sure you want to delete this article?' } %></td>
                    </tr>
                <% end %>
            <% else %>
                <tr>
                    <td colspan="3">No matching articles found.</td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= link_to 'Index of All Articles', articles_path %>
</div> <!-- .container is main centered wrapper -->