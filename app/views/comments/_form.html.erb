<%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
        <%= f.label :commenter %><br>
        <%= f.text_field :commenter, :class => "u-full-width", placeholder: "Your Name" %>
    </p>

    <p>
        <%= f.label :body %><br>
        <%= f.text_area :body, :class => "u-full-width", placeholder: "Your Comment" %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>